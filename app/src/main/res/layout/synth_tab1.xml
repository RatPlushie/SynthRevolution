<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/HUDControlTableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TableRow
                android:id="@+id/BrightnessTableRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/LEDBrightnessTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/brightness"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/LEDBrightnessSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:max="100" />

                <TextView
                    android:id="@+id/LEDBrightnessTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3" />
            </TableRow>

            <TableRow
                android:id="@+id/RedTableRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/LEDRedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/red"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/LEDRedSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:max="255" />

                <TextView
                    android:id="@+id/LEDRedTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3" />
            </TableRow>

            <TableRow
                android:id="@+id/BlueTableRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/LEDBlueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blue"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/LEDBlueSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:max="255" />

                <TextView
                    android:id="@+id/LEDBlueTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3" />
            </TableRow>

            <TableRow
                android:id="@+id/GreenTableRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/LEDGreenLayoutTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/green"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/LEDGreenSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:max="255" />

                <TextView
                    android:id="@+id/LEDGreenTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/colourWindowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="50dp">

            <View
                android:id="@+id/colourView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="#000000" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>